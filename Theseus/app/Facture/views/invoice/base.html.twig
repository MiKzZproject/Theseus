<page>

<style type="text/css" media="all">
{% block style %}
    body {margin: 50px;padding: 0;font: 12px Arial}
    #container {margin: 0 auto; width: 100%}

    #seller {width: 620px;height: 85px; clear: both;}
    #seller img {width: 300px; float: left;}
    #sellername { float: right;}

    #invoice, #invoice-total {float: right; width: 100%; font-size: 16px; }
    #invoice .dt, #invoice-total .dt {text-align:left; float: left; margin-bottom: 4px}
    #invoice .dd, #invoice-total .dd {text-align:right; float: right;  margin: 0 0 4px; text-align: right}
    .invoice-total {float: left;font-weight: bold;margin: 0;padding: 5px 8px;background:#e3e3e3}

    #buyer {float: left; width: 300px}
    #buyername {font-weight: bold;}

    #invoice-total {clear: both;}

    #terms, #notes {float: left;width: 100%;margin: 10px 0}

    #sellerinfo {width: 100%; text-align: center;}

    table {width: 100%}
    table thead tr {padding: 10px 5px;border: 1px solid #c7c7c7;font-weight: bold;}
    table thead th {background:#e3e3e3}

    table tbody tr {padding: 10px 5px;}

    /* ***** ENTRIES ***** */
    #entries {width: 100%}
    #entries .col1, .col2, .col3, .col4{text-align: right; font-size: 16px; padding:5px 10px 5px 5px;}
    #entries .col1 {width: 50%; text-align: left;}
    #entries .col2 {width: 20%;}
    #entries .col3, .col4 {width: 15%;}

{% endblock %}
</style>


<div id="container">
{% block content %}
{% endblock %}
</div>

</page>